<section class="postCarouselSec">
	<div class="postCarousel">
    <% if @post.images.any? %>
      <% @post.images.each do |image| %>
        <div class="item" style="background-image:url(<%= asset_path(image.image.url) %>);"></div>
      <% end %>
    <% else %>
        <div class="item" style="background-image:url(<%= asset_path(@post.preview_url) %>);"></div>
    <% end %>
	</div>
	<div class="mainWrapper">
		<div class="postInfo">
			<div class="info" id="post_<%= @post.id %>">
				<ul class="aboutParth">
					<li>
						<div class="left">
							<p class="whatIsIt">
								<a href="/categories/<%= @post.category_id %>">
								<%= @post.category.name %></a>
							</p>
							<h3><%= @post.title %></h3>
						</div>
						<div class="right">
							
							<p class="whatIsIt">Оценка</p>
						
							<span class="vote">
								<%= @post.score %> <img src="<%= asset_path('simb/vote.png') %>">
							</span>
						</div>
					</li>
					<li>
					<span class="location">
						<img src="<%= asset_path('simb/location.png') %>" />
						<%= @post.location %></span>
						
					</li>

				</ul>
        <% if current_user && current_user.has_role?(:admin) %>
          <div class="card-action clearfix">
            <div class="pull-left">
              <%= link_to 'редактировать', edit_post_path(@post), class: 'btn btn-link btn-icon',
                          id: "edit_post_link_#{@post.id}", remote: true %>
            </div>
          </div>
        <% end %>
			</div>
			<div class="social">
				<div class="sn">
				<article>Рассказать друзьям</article>
				<ul class="a2a_kit">
						<li>
							<a class="a2a_button_facebook">
							<img src="<%= asset_path('simb/fb.png') %>" />
							</a>
						</li>
						<li>
							<a class="a2a_button_twitter">
							<img src="<%= asset_path('simb/twi.png') %>" />
							</a>
						</li>
						<li>
							<a class="a2a_button_vk">
							<img src="<%= asset_path('simb/vk.png') %>" />
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="postBody">
	<div class="mainWrapper ">
		<ul class="postTags">
			<% @post.tag_list.each do |tag|%>
				<li><%= link_to "##{tag}", show_tag_path(tag) %></li>
			<% end %>
		</ul>
	</div>
</section>

<%= render 'post_sections/post_sections' %>
<%= render 'comments/form', post: @post %>
<%= render 'comments/comments' %>

<%= render 'main/posts' %>