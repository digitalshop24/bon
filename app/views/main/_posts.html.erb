<section class="bricksSec">
	<div class="mainWrapper">
		<div class="bricksWrap">
			<% @posts.each do |post|%>
				<%# unless post.badge.nil? %>
				<!-- ДОБАВИТЬ ПОЛЕ СЕЛЕКТ (new // best) В ПОСТ -->
				<%# end %>
	
				<div class="brick">
				<div>
				<%= link_to post do  %>
				<div class="imgParth" style="background-image:url(<%= asset_path(post.preview.url) %>);" ></div>
				<% end %>
				</div>
				<ul class="aboutParth">
					<li>
						<div class="left">
							<p class="whatIsIt">
								<a href="/categories/<%= post.category_id %>">
								<%= post.category.name %></a>
							</p>
							<h3><%= link_to post do  %><%= post.title %><% end %></h3>
						</div>
						<div class="right">
							
							<p class="whatIsIt">Оценка</p>
						
							<span class="vote">
								<%= post.score %> <img src="<%= asset_path('simb/vote.png') %>">
							</span>
						</div>
					</li>
					<li>
					<span class="location">
						<img src="<%= asset_path('simb/location.png') %>" />
						<%= post.location %></span>
						
					</li>
				</ul>
				
				</div>
				
			<% end %>
		</div>
	</div>
</section>
