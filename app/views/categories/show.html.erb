<section class="redCatInfo">
	<div class="mainWrapper">
		<div class="redWrap">
			<div class="imgWrap">
				<%= image_tag @category.bon_img_type.url %>
			</div>
			<div class="infoWrap">
				<% if @is_admin %>
					<div class="manage">
						<%= link_to 'Редактировать', edit_category_path(@category), class: 'edit' %>
					</div>
				<% end %>
				<article><%= @category.name %></article>
				<span><%= @category.description.to_s.html_safe %></span>
				<ul class="filter">
					<li>
						<a href="<%= category_sort_by_date_path(@category) %>">
						<img src="<%= asset_path('simb/newSm.png') %>" />
						<span>Недавние</span>
						</a>
					</li>
					<li>
						<a href="<%= category_sort_by_score_path(@category) %>">
						<img src="<%= asset_path('simb/bestSm.png') %>" />
						<span>Рейтинг лучших</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</section>

<%= render 'main/posts' %>
