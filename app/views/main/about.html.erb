<section class="categoryAbout">
	<div class="mainWrapper">
	<ul class="categoryWrap">
		<% @categories = @categories.sort {|a, q| q[:name] <=> a[:name]} %>
		<% @categories.each do |category|%>
		<li class="cat">
			<div class="sideText">
				
				<article><%= link_to category do %> <%= category.name %><% end %></article>
				
				<span><%= category.description.html_safe %></span>
			</div>
			<div class="sideImg">
				<%= link_to category do %>
				<%= image_tag category.bon_img_type.url %>
				<% end %>
			</div>
		</li>
		<% end %>
	</ul>
	</div>
</section>
