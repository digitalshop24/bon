<!DOCTYPE html>
<html>
  <head>
    <title>Bon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Bon"/>
    <meta property="og:image" content="<%= asset_path('/about/bonAbout.png') %>"/>
    <meta property="og:description" content="#bon - not just a dog!"/>
    <meta property="og:url" content="https://bon-staging.herokuapp.com/">
    <link rel="shortcut icon" href="<%= asset_path('favicon.png') %>" type="image/x-icon">
  </head>

  <body>
    <div class="ui sidebar menu inverted vertical bon-sidebar links">
      <%= link_to root_path, class: 'logo' do %>
        <img src="<%= asset_path('simb/logoMobWhite.png') %>"/>
      <% end %>
      <% Link.sidebar.each do |link| %>
        <%= render partial: 'links/link', locals: { link: link } %>
      <% end %>
      <% if current_user && current_user.has_role?(:admin) %>
        <div class="link-wrapper">
          <a href="#" class="item new"><strong>Добавить ссылку</strong></a>
          <%= form_for Link.new, html: { style: 'display:none;' }, remote: true do |f| %>
            <%= f.hidden_field :position, value: 'sidebar' %>
            <%= f.text_field :text, placeholder: 'Текст ссылки' %>
            <%= f.text_field :url, placeholder: 'URL' %>
            <%= f.submit 'Добавить' %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="pusher">
      <% if current_user && current_user.has_role?(:admin) %>
        <div class="adminWrap">
          <div class="mainWrapper">
            <ul class="adminNav">
              <%= render 'main/admin_menu' %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= render 'main/header' %>
      <%= yield %>
      <%= render 'main/footer' %>
    </div>
    <%= render 'modals/booking' %>
    <%= render 'modals/subscribe' %>
    <script async src="https://static.addtoany.com/menu/page.js"></script>
  </body>
</html>
