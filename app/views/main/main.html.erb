<section class="eventCarouselSec">
  <div class="mainWrapper">
    <div class="eventCarousel">
      <% @posts_unlim.to_slider.each do |post_rest|%>
        <div class="item">
          <div class="slideWrapper">
            <a href="/posts/<%= post_rest.id %>" class="imgSide" style="background-image:url(<%= asset_path(post_rest.preview_url) %>); " ></a>
            <div class="contentSide">
              <ul class="aboutEvent">
                <li><%= link_to post_rest.category.name, category_path(post_rest.category)%></li>
                <li><%= link_to post_rest.title, post_path(post_rest) %></li>
                <li><%= link_to post_rest.description, post_path(post_rest) %></li>
                <ul class="hash">
                  <% post_rest.tag_list.each do |tag| %>
                    <li><%= link_to "##{tag}", show_tag_path(tag) %></li>
                  <% end %>
                </ul>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render 'main/posts' %>
<section class="aboutSec">
  <div class="mainWrapper">
    <div class="aboutInfo">
      <h3>О проекте</h3>
      <img src="<%= asset_path('simb/bone.png') %>" />
      <p>Я Бон. Я составляю рейтинг и пишу рецензии на заведения Москвы, куда хорошо сходить со своим питомцем.</p>
    </div>
  </div>
</section>
