<div class="authPage">
<h2>Вход</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="authInputsWrap">
    <%= f.input :email, required: false, autofocus: true,label:false,placeholder:"Почта", input_html: { class: 'inputRound' } %>
    <%= f.input :password, required: false,label:false,placeholder:"Пароль", input_html: { class: 'inputRound' } %>
	</div>
    <%= f.submit "Вход", class: 'enterBtn' %>
<% end %>
	<div class="linksBtns">
		<%#= link_to "Регистрация", new_registration_path(resource_name) %>
		<%= link_to "Забыли пароль?", new_password_path(resource_name) %>
	</div>
</div>